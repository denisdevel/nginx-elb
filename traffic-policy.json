{
   "AWSPolicyFormatVersion":"2015-10-01",
   "RecordType":"A",
   "StartRule":"site_switch",
   "Endpoints":{
      "node1":{
         "Type":"elastic-load-balancer",
         "Value":"elb1"
      },
      "node2":{
         "Type":"elastic-load-balancer",
         "Value":"elb2"
      }
    },
   "Rules":{
      "site_switch":{
         "RuleType":"failover",
         "Primary":{
            "EndpointReference":"node1"
         },
         "Secondary":{
            "EndpointReference":"node2"
         }
      }
   }
}
